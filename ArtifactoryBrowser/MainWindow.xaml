<Window x:Class="ArtifactoryBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtifactoryBrowser"
        mc:Ignorable="d"
        Title="Artifactory Browser" 
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="Manual"
        Closing="Window_Closing">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="10"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="10"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- URL Input -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBlock Text="Artifactory URL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
      <TextBox x:Name="txtArtifactoryUrl" Grid.Column="1" Margin="0,0,10,0" 
                     VerticalContentAlignment="Center" KeyDown="TxtArtifactoryUrl_KeyDown"/>
      <Button x:Name="btnSearch" Grid.Column="2" Content="Rechercher" 
                    Width="100" Click="BtnSearch_Click"/>
    </Grid>

    <!-- Environnement DEV -->
    <GroupBox Grid.Row="2" Header="Environnement DEV">
      <DataGrid x:Name="dgvDev" AutoGenerateColumns="False" IsReadOnly="True" 
                      SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Nom du fichier" Binding="{Binding Name}" Width="*"/>
          <DataGridTextColumn Header="Taille" Binding="{Binding Size, StringFormat={}{0} Mo}" Width="100"/>
          <DataGridTextColumn Header="Dernière modification" Binding="{Binding LastModified}" Width="200"/>
          <DataGridTextColumn Header="Chemin" Binding="{Binding Path}" Width="*"/>
        </DataGrid.Columns>
      </DataGrid>
    </GroupBox>

    <!-- Environnement PROD -->
    <GroupBox Grid.Row="4" Header="Environnement PROD">
      <DataGrid x:Name="dgvProd" AutoGenerateColumns="False" IsReadOnly="True" 
                      SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Nom du fichier" Binding="{Binding Name}" Width="*"/>
          <DataGridTextColumn Header="Taille" Binding="{Binding Size, StringFormat={}{0} Mo}" Width="100"/>
          <DataGridTextColumn Header="Dernière modification" Binding="{Binding LastModified}" Width="200"/>
          <DataGridTextColumn Header="Chemin" Binding="{Binding Path}" Width="*"/>
        </DataGrid.Columns>
      </DataGrid>
    </GroupBox>

    <TextBlock x:Name="lblStatus" Grid.Row="4" Margin="0,5,0,0" FontSize="24"
               Text="Entrez une URL Artifactory et cliquez sur Rechercher" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               TextAlignment="Center"
               Foreground="Gray"/>
  </Grid>
</Window>
