<Window x:Class="ArtifactoryBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtifactoryBrowser"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Artifactory Browser" 
        MinWidth="1000" MinHeight="700"
        WindowStartupLocation="Manual"
        FontSize="14"
        Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Barre de navigation -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnBack" Grid.Column="0" Content="←" Click="BtnBack_Click" ToolTip="Page précédente"/>
            <Button x:Name="btnForward" Grid.Column="0" Content="→" Click="BtnForward_Click" Margin="40,0,0,0" ToolTip="Page suivante"/>
            
            <TextBox x:Name="txtArtifactoryUrl" Grid.Column="1" Margin="10,0,10,0" 
                     KeyDown="TxtArtifactoryUrl_KeyDown" VerticalContentAlignment="Center"/>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnGo" Content="Aller" Click="BtnGo_Click" Width="80"/>
                <Button x:Name="btnRefresh" Content="🔄" Click="BtnRefresh_Click" Width="40" ToolTip="Rafraîchir"/>
            </StackPanel>
        </Grid>

        <!-- WebView2 -->
    <wv2:WebView2 x:Name="webView" Grid.Row="2" 
             Source="https://www.jfrog.com/artifactory/"
             NavigationStarting="WebView_NavigationStarting"
             NavigationCompleted="WebView_NavigationCompleted"
             Margin="0,10,0,0"/>

    <!-- Barre d'état -->
        <StatusBar Grid.Row="3" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus">Prêt</TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="lblProgress"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
