<Window x:Class="ArtifactoryBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtifactoryBrowser"
        mc:Ignorable="d"
        Title="Artifactory Browser" 
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="Manual"
        FontSize="14"
        Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="ColumnHeaderHeight" Value="35"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- URL Input -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Artifactory URL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtArtifactoryUrl" Grid.Column="1" Margin="0,0,10,0" 
                     KeyDown="TxtArtifactoryUrl_KeyDown"/>
            <Button x:Name="btnSearch" Grid.Column="2" Content="Rechercher" 
                    Click="BtnSearch_Click"/>
        </Grid>

        <!-- Environnement DEV -->
        <GroupBox Grid.Row="2" Header="Environnement DEV" FontSize="16">
            <DataGrid x:Name="dgvDev">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom du fichier" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Taille (Mo)" Binding="{Binding Size, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Dernière modification" Binding="{Binding LastModified}" Width="200"/>
                    <DataGridTextColumn Header="Chemin" Binding="{Binding Path}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Environnement PROD -->
        <GroupBox Grid.Row="4" Header="Environnement PROD" FontSize="16">
            <DataGrid x:Name="dgvProd">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom du fichier" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Taille (Mo)" Binding="{Binding Size, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Dernière modification" Binding="{Binding LastModified}" Width="200"/>
                    <DataGridTextColumn Header="Chemin" Binding="{Binding Path}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <TextBlock x:Name="lblStatus" Grid.Row="4" Margin="0,5,0,0" 
                   Text="Entrez une URL Artifactory et cliquez sur Rechercher" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Foreground="Gray"/>
    </Grid>
</Window>
